{
  "name": "drupalx_theme",
  "version": "1.1",
  "scripts": {
    "scss-fix": "npx stylelint './src/**/*.scss' './components/**/*.scss' --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean:css": "rimraf dist/*.css components/**/*.css",
    "clean:js": "rimraf dist/*.js",
    "clean": "npm run clean:css && npm run clean:js",
    "lint:js": "eslint components/**/*.behavior.js",
    "lint:sass": "stylelint 'src/**/*.scss' 'components/**/*.scss'",
    "compile": "node compile.js",
    "compress:assets": "imagemin static/images/* --out-dir=dist/images",
    "build": "npm run clean && npm run lint:js && npm run lint:sass && npm run compile && npm run compress:assets",
    "watch": "chokidar 'components/**/*.scss' 'src/**/*.scss' -c 'node compile.js {path}'",
    "start": "npm run build && npm run watch",
    "postinstall": "husky install",
    "prepare": "husky install",
    "cypress": "npx cypress run",
    "percy-storybook": "percy storybook -i '^Editorial/' ./storybook-static"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@percy/cli": "^1.28.7",
    "@percy/storybook": "^6.0.1",
    "@storybook/addon-actions": "^8.2.6",
    "@storybook/addon-essentials": "^8.2.6",
    "@storybook/addon-interactions": "^8.2.6",
    "@storybook/addon-links": "^8.2.6",
    "@storybook/addon-themes": "^8.2.6",
    "@storybook/addon-webpack5-compiler-babel": "^3.0.3",
    "@storybook/blocks": "^8.2.6",
    "@storybook/html": "^8.2.6",
    "@storybook/html-webpack5": "^8.2.6",
    "@storybook/manager-api": "^8.2.6",
    "@storybook/test": "^8.2.6",
    "@storybook/theming": "^8.2.6",
    "chokidar-cli": "^3.0.0",
    "cypress": "^13.11.0",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.8.0",
    "glob": "^10.3.15",
    "imagemin": "^9.0.0",
    "imagemin-cli": "^8.0.0",
    "rimraf": "^5.0.7",
    "sass": "^1.77.2",
    "storybook": "^8.2.6",
    "storybook-addon-sass-postcss": "^0.3.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-scss": "^6.5.1"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "buffer": "^6.0.3",
    "husky": "^9.0.11",
    "jquery": "^3.7.1",
    "postcss": "^8.4.35",
    "postcss-scss": "^4.0.9",
    "twing": "^2.3.7",
    "twing-loader": "^2.0.2"
  }
}