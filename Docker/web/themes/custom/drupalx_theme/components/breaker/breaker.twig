{{ attach_library('drupalx_theme/breaker') }}

{% set media_layout = media_layout ?? 'left' %}
<div class="breaker container-fluid {{ media_layout }} px-0">
  <div class="row {{ ('right' in media_layout) ? 'flex-lg-row-reverse' : 'flex-lg-row' }} align-items-stretch">
    <div class="col-lg-4 px-0">
      <div class="media mb-0">
        {{ media }}
      </div>
    </div>
    <div class="col-lg-8 d-flex flex-column {{ bg_color_modifier }} p-5 px-sm-10 py-sm-5 px-xxl-20 py-xxl-10">

      {% if eyebrow %}
        <div class="eyebrow">{{ eyebrow }}</div>
      {% endif %}

      {%
        include '@drupalx_theme/heading/heading.twig' with {
          heading: {
            title: title,
            heading_level: 2,
            modifier: 'mb-2'
          }
        } only
      %}

      {% if summary %}
        {{ summary }}
      {% endif %}

      {% if link.url is not empty and link.text is not empty %}
        <p>
          {% if bg_color_modifier == 'blue' or bg_color_modifier == 'purple'%}
            <a href="{{ link.url }}" class="btn rounded-pill btn-outline-light mt-4">{{ link.text }}</a>
          {% else %}
            <a href="{{ link.url }}" class="btn rounded-pill btn-outline-secondary mt-4">{{ link.text }}</a>
          {% endif %}
        </p>
      {% endif %}
    </div>
  </div>
</div>
