{{ attach_library('drupalx_theme/accordion') }}

<section class="mb-4 mt-4 px-0 {{ modifier }}">
  {% if heading %}
    <h2 class="text-dark mb-4">{{ heading }}</h2>
  {% endif %}

  {% if summary %}
    <div class="mb-4">{{ summary }}</div>
  {% endif %}

  <div class="accordion">
    {% block accordion_items %}
      {% for item in accordion_items %}
        {%
          include '@drupalx_theme/accordion/accordion-item.twig' with { item: item } only
        %}
      {% endfor %}
    {% endblock %}
  </div>
</section>
