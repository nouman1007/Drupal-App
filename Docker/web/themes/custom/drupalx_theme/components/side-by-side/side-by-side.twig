{{ attach_library('drupalx_theme/side-by-side') }}

{% set layout = layout ?? 'left' %}
{% set modifier = modifier ?? '' %}
<div class="side-by-side container {{ layout }} {{ modifier }}">
  <div class="row flex-column gy-3 {{ ('right' in layout) ? 'flex-lg-row-reverse ' : 'flex-lg-row ' }}justify-content-between align-items-center">
    <div class="col-lg-6">
      <div class="shadow rounded-3">
        {{ media }}
      </div>
    </div>
    <div class="col-lg-6 col-xxl-5 d-flex flex-column gap-3">
      {% if eyebrow %}
        <div class="eyebrow">{{ eyebrow }}</div>
      {% endif %}
      {%
        include '@drupalx_theme/heading/heading.twig' with {
          heading: {
            title: title,
            heading_level: 2,
            modifier: 'mb-2'
          }
        } only
      %}
      {% if body %}
        {{ body }}
      {% endif %}
      {% if link.url is not empty and link.text is not empty %}
        <p class="d-flex gap-2">
          <a href="{{ link.url }}" class="btn rounded-pill btn-outline-primary">{{ link.text }}</a>
        </p>
      {% endif %}
    </div>
  </div>
</div>
