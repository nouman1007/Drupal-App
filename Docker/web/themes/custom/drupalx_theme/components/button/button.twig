{% if button.url %}
  <a href="{{ button.url }}" class="btn rounded-pill{{ button.modifier ? ' ' ~ button.modifier }} px-4 py-2" role="button">{{ button.text }} {% if button.icon %}<span class="material-symbols-outlined ms-1">{{ button.icon }}</span>{% endif %}</a>
{% else %}
  <button class="btn rounded-pill{{ button.modifier ? ' ' ~ button.modifier }} px-4 py-2">{{ button.text }}</button>
{% endif %}
