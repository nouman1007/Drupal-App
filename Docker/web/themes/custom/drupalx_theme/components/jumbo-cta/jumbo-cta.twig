{{ attach_library('drupalx_theme/jumbo-cta') }}

{% set media_layout = media_layout ?? 'left' %}
<section class="jumbo-cta container-fluid {{ media_layout }} {{ layout_modifier }}">
  <div class="row flex-column {{ ('right' in media_layout) ? 'flex-lg-row-reverse' : 'flex-lg-row' }} justify-content-center">
      <div class="col-12 col-xl-6 media media--type-image">
        {{ media }}
      </div>
      <div class="col-12 col-xl-6 body-text p-4 p-md-8 d-flex flex-column">
        {%
          include '@drupalx_theme/heading/heading.twig' with {
            heading: {
              title: title,
              heading_level: 2,
              modifier: 'mb-2'
            }
          } only
        %}
        {% if summary %}
          {{ summary }}
        {% endif %}
        {% if link.url is not empty and link.text is not empty %}
          <p>
            <a href="{{ link.url }}" class="btn rounded-pill btn-outline-primary mt-4 px-5 py-2 px-md-10 py-md-4">{{ link.text }}</a>
          </p>
        {% endif %}
      </div>
  </div>
</section>
